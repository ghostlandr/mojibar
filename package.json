{
  "name": "mojibar",
  "version": "2.7.0",
  "description": "A menubar app adaptation of Emoji searcher.",
  "main": "index.js",
  "dependencies": {
    "electron-is-dev": "^0.1.2",
    "emojilib": "^2.4.0",
    "menubar": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^1.8.8",
    "electron-builder": "^22.9.1",
    "electron-packager": "^8.0.0",
    "standard": "^10.0.2"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -l -o",
    "test": "standard index.js app/search.js app/settings.js",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.electron.mojibar",
    "productName": "Mojibar",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "tar.gz",
      "category": "Utility"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muan/mojibar.git"
  },
  "author": "Mu-An Chiou <me@muanchiou.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muan/mojibar/issues"
  },
  "homepage": "https://github.com/muan/mojibar#readme"
}
